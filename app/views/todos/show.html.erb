<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">タスク : <%= @todo.title3 %></h5>
          <hr>
          <h6 class="card-subtitle mb-2 text-muted">達成度 : <%= @todo.body %></h6>
          <hr>
          <h6 class="card-subtitle mb-2 text-muted">更新日時 : <time><%= @todo.updated_at.strftime("%Y-%m-%d %H:%M") %></time></h6>
          <hr>
          <%= render 'show_footer', todo: @todo %>
        </div>
      </div>
    </div>
  </div>
</div>