<%= form_for todo do |t| %>
    <div class="form-group">
        <label>Todo名</label>
        <%= t.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
        <label>達成度</label>
        <%= t.text_area :body, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= t.submit class: 'btn btn-success' %>
    </div>
<% end %>