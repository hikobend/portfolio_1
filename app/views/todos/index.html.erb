<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Todo</th>
            <th scope="col">投稿者</th>
            <th scope="col">達成度</th>
          </tr>
        </thead>
        <tbody>
            <% @todos.each do |todo| %>
            <tr>
              <td><%= link_to todo.title, todo_path(todo) %></td>
              <td><%= todo.user.name %></td>
              <td><%= todo.body %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
