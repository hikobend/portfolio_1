<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Todo</th>
            <th scope="col">達成度</th>
            <th scope="col">完了・削除ボタン</th>
            <th scope="col">公開状態</th>
          </tr>
        </thead>
        <tbody>
            <% @todos.each do |todo| %>
            <tr>
              <% if todo.user == current_user %>
                <% if todo.complete %>
                  <td class="complete">
                    <%= link_to todo.title3, edit_todo_path(todo) %>
                  </td>
                <% else %>
                  <td>
                    <%= link_to todo.title3, edit_todo_path(todo) %>
                  </td>
                <% end %>
              <td>
                <%= todo.body %>
              </td>
              <td>
                <%# todoのcompleteカラムをis_finishedパスで呼び出し、表示を変更する %>
                <% if todo.complete %>
                  <%= link_to '戻す', is_finished_todo_path(todo), method: :put, class: "btn btn-info" %>
                <% else %>
                  <%= link_to '完了', is_finished_todo_path(todo), method: :put, class: "btn btn-info" %>
                <% end %>
                <%= link_to '削除', todo_path(todo), method: :delete, class: "btn btn-danger" %>
              </td>
              <td>
                <%# todoのcompleteカラムをis_finishedパスで呼び出し、表示を変更する %>
                <% if todo.release %>
                  <span class="icon is-small" >
                    <i class="fas fa-lock-open" ></i>
                  </span>
                  <%= '公開中' %>
                <% else %>
                <span class="icon is-small" >
                <i class="fas fa-lock" ></i>
                  <%= '非公開' %>
                <% end %>
              </td>
              <% end %>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
