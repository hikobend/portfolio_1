<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Todo</th>
            <th scope="col">達成度</th>
            <th scope="col">完了・削除ボタン</th>
          </tr>
        </thead>
        <tbody>
            <% @todos.each do |todo| %>
            <tr>
            <% if todo.user == current_user %>
              <td><%= link_to todo.title, todo_path(todo) %></td>
              <td><%= link_to todo.body,todo_path(todo) %></td>
              <td><%= link_to "完了", "#", class: "btn btn-info" %><%= link_to '削除', todo_path(todo), method: :delete, class: "btn btn-danger" %></td>
            <% end %>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
