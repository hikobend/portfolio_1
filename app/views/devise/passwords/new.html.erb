<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1 class="text-center"><span><span>パスワードを</span><span><span>お忘れの</span>場合</span></span></h1>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', required: true, maxlength: '100' %>
        </div>

        <div class="form-group">
          <%= f.submit "新しいパスワードを送信", class: 'btn btn-success btn-block' %>
        </div>
      <% end %>
      <hr>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>