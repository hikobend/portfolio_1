<div class="container marketing">
  <div class="row d-flex justify-content-center">
    <div class="col-10 mt-5">
      <%= render 'searchs/form' %>
      <br>
      <table class="table text-center">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", size: '80x50', class: "profile_image" %>
                <%= link_to user_path(user), class: "font-color" do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td>
                <%= simple_format user.profile, class: "index_user_profile" %>
              </td>
              <td>
                <% if user != current_user %>
                  <% if user.is_followed_by?(current_user) %>
                    <%= link_to user_relationships_path(user), method: :delete do %>
                      <button type="button" class="btn btn btn-danger"><span>フォロー</span><span>解除</span></button>
                    <% end %>
                  <% else %>
                    <%= link_to user_relationships_path(user), method: :post do %>
                      <button type="button" class="btn btn btn-primary"><span>フォロー</span></button>
                    <% end %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>