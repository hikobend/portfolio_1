<%= render 'searchs/form' %>

<% @users.each do |user| %>
  <ul class="media-list">
    <li class="media">
      <%= link_to user_path(user) do %>
        <%= attachment_image_tag user, :profile_image, fallback: "no-image.png" %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to user.name, user_path(user) %>
        </h5>
        <h5 class="card-title">
          <%= simple_format user.profile %>
        </h5>
      </div>
    </li>
    <hr>
  </ul>
<% end %>