<% @users.each do |user| %>
  <ul class="media-list">
    <li class="media">
      <%= link_to user_path(user) do %>
        <%= attachment_image_tag user, :profile_image, fallback: "no-image.png" %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to user.name, user_path(user) %>
        </h5>
        <% if user.id == current_user.id %>
          <h5 class="card-title">
            <%= link_to user.email, user_path(user) %>
          </h5>
        <% end %>
      </div>
    </li>
    <hr>
  </ul>
<% end %>