    <% if user != current_user %>
        <% if user.is_followed_by?(current_user) %>
        <%= link_to user_relationships_path(user), class: "btn btn btn-danger", method: :delete do %>
            フォロー解除
        <% end %>
        <% else %>
        <%= link_to user_relationships_path(user), class: "btn btn btn-primary", method: :post do %>
            フォロー
        <% end %>
        <% end %>
    <% end %>
</td>